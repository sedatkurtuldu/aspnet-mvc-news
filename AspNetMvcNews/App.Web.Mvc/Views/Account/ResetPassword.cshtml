@model ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Şifre Yenileme";
}

<!doctype html>
<html lang="tr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/login-form-09/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/login-form-09/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/login-form-09/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="/login-form-09/css/style.css">

    <title>Şifre Yenileme</title>
</head>
<body>
    <div class="content">
        <div class="container">
            <div class="row justify-content-center">
                <!-- <div class="col-md-6 order-md-2">
                  <img src="images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
                </div> -->
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <div class="form-block">
                                <div class="mb-4">
                                    <h3>Şifre Yenileme</h3>
                                    <p class="mb-4">Yeni şifrenden bir adım uzaktasın, şifreni şimdi yenile!</p>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form asp-controller="Account" asp-action="ResetPassword" method="post">
                                    <input asp-for="Code" hidden /> <!--INPUT TYPE HIDDEN CODE-->
                                    <div class="form-group first">
                                        <label asp-for="Email" class="sr-only">E-Posta</label>
                                        <input asp-for="Email" type="email" class="form-control" style="font-size: 14px;">
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                    <div class="form-group last mb-4">
                                        <label asp-for="Password" class="sr-only">Şifre</label>
                                        <input asp-for="Password" type="password" class="form-control" style="font-size: 14px;">
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>

                                    <div class="form-group last mb-4">
                                        <label asp-for="ConfirmPassword" class="sr-only">Şifre</label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" style="font-size: 14px;">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                    </div>

                                    <button type="submit" class="btn btn-pill text-white btn-block btn-primary">Gönder</button>

                                    <span class="d-block text-center my-4 text-muted"><a asp-controller="Account" asp-action="Register" class="forgot-pass">Hesabın yok mu? Kaydol!</a></span>

                                    <span class="d-block text-center my-4 text-muted"><a asp-controller="Account" asp-action="Login" class="forgot-pass">Hesabın var mı? Giriş Yap!</a></span>

                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>
