
<header class="header-area">
	<div class="top-header">
		<div class="container h-100">
			<div class="row h-100 align-items-center">
				<!-- Breaking News Area -->
				<div class="col-12 col-md-6">
					<div class="breaking-news-area">
						<h5 class="breaking-news-title">HOŞGELDİNİZ</h5>
						<div id="breakingNewsTicker" class="ticker" style="height: 24px;">
							<ul>
								<li class="tickerHook" style="top: 0.374533px; left: 0px; position: absolute; display: block; opacity: 0.992197; z-index: 99;"><a href="#">Son Dakika Haberleri Anında Burada !</a></li>
								<li class="" style="top: -3em; left: 0px; position: absolute; display: block; opacity: 0; z-index: 98;"><a href="#">Gündemi Takip Et!</a></li>
								<li class="" style="top: -3em; left: 0px; position: absolute; display: block; opacity: 0; z-index: 98;"><a href="#">En Güncel Spor Haberleri !</a></li>
								<li class="" style="top: -3em; left: 0px; position: absolute; display: block; opacity: 0; z-index: 98;"><a href="#">Seçim Hazırlıklarını Buradan Takip Et !</a></li>
								<li class="" style="top: -3em; left: 0px; position: absolute; display: block; opacity: 0; z-index: 98;"><a href="#">En Çarpıcı Haberler Burada !</a></li>
								<li class="" style="top: -2.97659em; left: 0px; position: absolute; display: block; opacity: 0.00780278; z-index: 98;"><a href="#">Teknolojiyi Buradan Takip Et !</a></li>
							</ul>
						</div>
					</div>
				</div>
				<!-- Stock News Area -->
				<div class="col-12 col-md-6">
					<div class="stock-news-area">
						<div id="stockNewsTicker" class="ticker d-flex justify-content-end" style="height: 53px;">
							<a asp-controller="Account" asp-action="Login" class="nav-link" style="color: white;">Giriş Yap <span class="sr-only">(current)</span></a>
							<a asp-controller="Account" asp-action="Register" class="nav-link" style="color: white;">Üye Ol <span class="sr-only">(current)</span></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Middle Header Area -->
	<div class="middle-header">
		<div class="container h-100">
			<div class="row h-100 align-items-center">
				<!-- Logo Area -->
				<div class="col-12 col-md-4">
					<div class="logo-area">
						<a href="/"><img src="/template/img/core-img/logo.png" alt="logo"></a>
					</div>
				</div>
				<!-- Header Advert Area -->
				<div class="col-12 col-md-8">
					<div class="header-advert-area">
						<a href="mailto:sdt_krtldu@hotmail.com"><img src="/template/img/bg-img/top-advert-2.png" alt="header-add"></a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Bottom Header Area -->
	<div class="bottom-header">
		<div class="container h-100">
			<div class="row h-100 align-items-center">
				<div class="col-12">
					<div class="main-menu">
						<nav class="navbar navbar-expand-lg">
							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#gazetteMenu" aria-controls="gazetteMenu" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i> Menu</button>
							<div class="collapse navbar-collapse" id="gazetteMenu">
								<ul class="navbar-nav mr-auto">
									@await Component.InvokeAsync("Categories")
								</ul>
								<!-- Search Form -->
								<div class="header-search-form mr-auto">
									<form asp-controller="News" asp-action="Search">
										<input name="q" type="text" placeholder="Ara...">
										<input class="d-none" type="submit" value="Ara">
									</form>
								</div>
								<!-- Search btn -->
								<div id="searchbtn">
									<i class="fa fa-search" aria-hidden="true"></i>
								</div>
							</div>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>