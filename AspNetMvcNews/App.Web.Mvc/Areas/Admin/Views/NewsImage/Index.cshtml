@model IEnumerable<NewsImage>

@{
    ViewData["Title"] = "Haber Resimleri";
}

<h1>Haber Resimleri</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Ekle</a>
</p>



<table class="table table-striped" style="background-color:aliceblue">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.NewsId)
            </th>
           
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    <img src="/Img/NewsImage/@item.ImagePath" alt="" height="40" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsId)
                </td>

               

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
