@model HomePageViewModel
@{
	ViewData["Title"] = "Admin Anasayfa";
}

<h1>Son Eklenen Haberler</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.News.Title)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.News.Content)
            </th>                                  
            <th>
                @Html.DisplayNameFor(model => model.News.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.NewsList.Any())
        {
            var haberler = Model.NewsList.OrderByDescending(n => n.CreatedAt).Take(5);

            @foreach (var item in haberler)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        <img src="/Img/@item.ImagePath" alt="@item.ImagePath" height="40">

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsHome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
